<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:background="@drawable/bgmakananubah"
    tools:context=".Activity.UbahActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah Data Makanan"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="21sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:hint="   Nama Makanan"
        android:textColorHint="@color/white"
        android:padding="6dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_asal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="21sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:hint="   Asal"
        android:textColorHint="@color/white"
        android:padding="6dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_deskripsi_singkat"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textSize="21sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:hint="   Deskripsi_singkat"
        android:textColorHint="@color/white"
        android:padding="6dp"/>

    <Button
        android:id="@+id/btn_ubah"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="ubah"
        android:textSize="21sp"/>



</LinearLayout>